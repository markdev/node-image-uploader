extends ./competeLayout.jade

block title
	title Submit Entry

block content
	div.mainBody
		a.backLink(href="/create") <- Back To Competitions I'm In
		hr
		h1 Submit Entry to #{contest.title}
		p.ruleDescription Rules: #{contest.rules}
		form(action="compete/submit", method="post", enctype="multipart/form-data")
			div#submissionBox
				input(type="file" name="chooseFile" value="Choose An Image")
				br
				input(type="checkbox" name="terms" value="agree")
				label I agree to the terms and conditions
				br
				input(type="hidden" name="cId" value="#{contest.id}")
				input(type="submit" name="submit" value="Submit")
				